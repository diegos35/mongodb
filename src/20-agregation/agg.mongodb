//[], [] pipeline
db.listingsAndReviews.aggregate([
    {
        $match: {
          amenities: "Wifi" //find
        }
    },
    { //project
        $project: {
          address:1,
        }
    },
    {$group: {
      _id: "$address.country", count: { $sum:1 } } }
])